<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bloom 24*7 Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            position: relative;
            overflow: hidden;
        }
        .login-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 40px;
            width: 100%;
            max-width: 400px;
            z-index: 10;
            position: relative;
        }
        .bubble {
            position: absolute;
            border-radius: 50%;
            background: rgba(173, 216, 230, 0.3);
            animation: float-bubble linear infinite;
        }
        @keyframes float-bubble {
            0% { transform: translateY(0) scale(1); }
            50% { transform: translateY(-20px) scale(1.2); }
            100% { transform: translateY(0) scale(1); }
        }
        .form-control {
            border-radius: 20px;
            padding: 10px 15px;
        }
        .btn-login {
            border-radius: 20px;
            padding: 10px 20px;
            background-color: #4a90e2;
            border-color: #4a90e2;
            transition: all 0.3s ease;
        }
        .btn-login:hover {
            background-color: #357abd;
            transform: translateY(-3px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="login-wrapper" id="bubbleContainer">
        <div class="login-container">
            <div class="text-center mb-4">
                <h2>Bloom 24*7</h2>
                <p class="text-muted">Login to your account</p>
            </div>
            <form id="loginForm">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="username" 
                        placeholder="Enter your username" 
                        required
                    >
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        class="form-control" 
                        id="password" 
                        placeholder="Enter your password" 
                        required
                    >
                </div>
                <button type="submit" class="btn btn-login btn-primary w-100">Login</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function createBubbles() {
            const container = document.getElementById('bubbleContainer');
            const bubbleCount = 20;

            for (let i = 0; i < bubbleCount; i++) {
                const bubble = document.createElement('div');
                bubble.classList.add('bubble');

                // Random size between 20 and 100 pixels
                const size = Math.random() * 80 + 20;
                bubble.style.width = `${size}px`;
                bubble.style.height = `${size}px`;

                // Random positioning
                bubble.style.left = `${Math.random() * 100}%`;
                bubble.style.top = `${Math.random() * 100}%`;

                // Random animation duration
                bubble.style.animationDuration = `${Math.random() * 10 + 5}s`;
                bubble.style.animationDelay = `${Math.random() * 3}s`;

                container.appendChild(bubble);
            }
        }

        // Create bubbles when page loads
        createBubbles();

        // Simple form validation
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('username');
            const password = document.getElementById('password');

            if (username.value.trim() === '' || password.value.trim() === '') {
                alert('Please enter both username and password');
                return;
            }

            // Placeholder for actual login logic
            alert('Login functionality to be implemented');
        });
    </script>
</body>
</html>

